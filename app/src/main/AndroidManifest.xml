<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lesson1">


    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.example.lesson1.AppClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:screenOrientation="portrait"
        >


        <activity
            android:name=".menuToolbar.AboutActivity"
            android:label="@string/information" />

        <activity
            android:name=".requestHistory.RequestHistory"
            android:label="@string/request_history" />
        <activity
            android:name=".menuToolbar.SettingsActivity"
            android:label="@string/settings" />
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>


</manifest>